# shellcheck shell=sh disable=SC1072,SC3043 #source

test_share_ls(){
    @assert false x hub share add script
    @assert true x hub share rm script/demo.js
    @assert true x hub share rm script/demo.wx
    @assert true x hub share add script/demo.js
    @assert true x hub share add script/demo.wx
    @assert stdout "x hub file la script" <<A
[{"path":"script/demo.js","isPublic":true},{"path":"script/demo.py","isPublic":false},{"path":"script/demo.wx","isPublic":true}]
A
}

test_share_add(){
    @assert true x hub share add script/demo.js
    @assert stdout "x hub file la script" <<A
[{"path":"script/demo.js","isPublic":false},{"path":"script/demo.py","isPublic":false},{"path":"script/demo.wx","isPublic":true}]
A
}

@assert:file:func